# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

default_platform(:ios)

platform :ios do
  # 各レーンで共通して実行する認証処理
  before_all do
    # APIキー認証を使用する場合
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]
    )
  end

  # メタデータとスクリーンショットのアップロード、審査提出
  desc "Upload metadata and screenshots to App Store Connect and submit for review"
  lane :upload_metadata do
    # Xcodeプロジェクトからバージョン番号を取得
    version_number = get_version_number(
      xcodeproj: "iOS/speedmeter/speedmeter.xcodeproj",
      target: "speedmeter"
    )

    # バージョン番号が取得できなかった場合はエラー
    UI.user_error!("バージョン番号をXcodeプロジェクトから取得できませんでした。") unless version_number && !version_number.empty?

    UI.success("Xcodeプロジェクトからバージョン番号を取得しました: #{version_number}")

    deliver(
      skip_binary_upload: false,
      skip_app_version_update: false,
      app_version: version_number,
      skip_metadata: false,
      skip_screenshots: false,
      force: true,
      overwrite_screenshots: true,
      ignore_language_directory_validation: true,
      run_precheck_before_submit: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: true,
      automatic_release: false,
      submission_information: {
        add_id_info_uses_idfa: true,  # AdMobでIDFAを使用
        export_compliance_uses_encryption: false,
        export_compliance_platform: "ios"
      },
      build_number: "latest"
    )
  end

  # メタデータのみアップロード（審査提出なし）
  desc "Upload metadata only without submitting for review"
  lane :upload_metadata_only do
    version_number = get_version_number(
      xcodeproj: "iOS/speedmeter/speedmeter.xcodeproj",
      target: "speedmeter"
    )

    deliver(
      skip_binary_upload: true,
      skip_app_version_update: false,
      app_version: version_number,
      skip_metadata: false,
      skip_screenshots: true,
      force: true,
      ignore_language_directory_validation: true,
      submit_for_review: false,
      precheck_include_in_app_purchases: false,
      run_precheck_before_submit: false
    )
  end

  # ビルド、アーカイブ、App Store Connectへアップロード
  desc "Build, archive and upload to App Store Connect"
  lane :release do
    # ビルド番号をインクリメント
    increment_build_number(
      xcodeproj: "iOS/speedmeter/speedmeter.xcodeproj"
    )

    # アーカイブとアップロード
    build_app(
      project: "iOS/speedmeter/speedmeter.xcodeproj",
      scheme: "speedmeter",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "speedmeter.ipa"
    )

    # App Store Connectにアップロード
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      force: true,
      precheck_include_in_app_purchases: false
    )

    UI.success("App uploaded to App Store Connect!")
  end

  # ビルド、アップロード、メタデータ、審査提出まで全て
  desc "Full release: build, upload, metadata, and submit for review"
  lane :full_release do
    # ビルド番号をインクリメント
    increment_build_number(
      xcodeproj: "iOS/speedmeter/speedmeter.xcodeproj"
    )

    version_number = get_version_number(
      xcodeproj: "iOS/speedmeter/speedmeter.xcodeproj",
      target: "speedmeter"
    )

    # アーカイブ
    build_app(
      project: "iOS/speedmeter/speedmeter.xcodeproj",
      scheme: "speedmeter",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "speedmeter.ipa"
    )

    # App Store Connectにアップロード＆審査提出
    deliver(
      skip_binary_upload: false,
      skip_app_version_update: false,
      app_version: version_number,
      skip_metadata: false,
      skip_screenshots: false,
      force: true,
      overwrite_screenshots: true,
      ignore_language_directory_validation: true,
      run_precheck_before_submit: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: true,
      automatic_release: false,
      submission_information: {
        add_id_info_uses_idfa: true,
        export_compliance_uses_encryption: false,
        export_compliance_platform: "ios"
      }
    )

    UI.success("App submitted for review!")
  end

  # TestFlightにアップロード
  desc "Build and upload to TestFlight"
  lane :beta do
    increment_build_number(
      xcodeproj: "iOS/speedmeter/speedmeter.xcodeproj"
    )

    build_app(
      project: "iOS/speedmeter/speedmeter.xcodeproj",
      scheme: "speedmeter",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "speedmeter.ipa"
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )

    UI.success("App uploaded to TestFlight!")
  end
end
